pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('MVN SONARQUBE'){
            steps{
                echo 'SONARQUBE DONE!!!'
sh 'mvn -B -V -f student-man-main/pom.xml clean verify'
sh 'mvn -B    -f student-man-main/pom.xml sonar:sonar -Dsonar.projectKey=Devsecops-project -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.token=$SONAR_TOKEN'
            }
        }
    }
}
