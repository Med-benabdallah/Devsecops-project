pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    environment {
        SONAR_TOKEN = credentials('devsecops') // üëà linked credential
    }

    stages {
        stage('Build') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn -B clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('simple-java-maven-app') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''
                            mvn clean verify sonar:sonar \
                              -Dsonar.projectKey=my-app \
                              -Dsonar.host.url=http://localhost:9000 \
                              -Dsonar.token=$SONAR_TOKEN \
                              -Dsonar.qualitygate.wait=true
                        '''
                    }
                }
            }
        }
        stage('Dependency Scan') {
            steps {
                dir('simple-java-maven-app') {
                    sh 'mvn org.owasp:dependency-check-maven:check -DfailOnCVSS=7'
                }
            }
        }
        stage('Secrets Scan - Gitleaks') {
  steps {
    sh '''
      set -euo pipefail
      mkdir -p tools reports

      # Download gitleaks (static binary)
      GITLEAKS_VER="v8.18.4"
      URL="https://github.com/gitleaks/gitleaks/releases/download/${GITLEAKS_VER}/gitleaks_${GITLEAKS_VER#v}_linux_x64.tar.gz"
      curl -sSL "$URL" | tar -xz -C tools
      chmod +x tools/gitleaks || true

      # Scan entire repo, fail on findings (exit 1), output SARIF + JSON
      ./tools/gitleaks detect \
        --source . \
        --report-format sarif \
        --report-path reports/gitleaks.sarif \
        --exit-code 1

      ./tools/gitleaks detect \
        --source . \
        --report-format json \
        --report-path reports/gitleaks.json \
        --exit-code 0
    '''
  }
}

    }

    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check the console output for details.'
        }
    }
}







